@model MusicSchool.WebUI.Models.EventWindowViewModel;

<form asp-controller="Calendar" id="up-del-form">
    <input type="hidden" id="id-input-edit" asp-for="Id" />
    <div class="ms-3">
        <span asp-validation-for="Title" class="text-danger validator" id="title-validator-edit"></span>
    </div>
    <div class="modal-body d-flex justify-content-between align-items-center">
        <label class="form-label w-auto h-100 mb-0 me-2 align-baseline">Название</label>
        <input id="title-input-edit"
               asp-for="Title"
               class="form-control w-100 h-auto m-0 align-baseline"
               placeholder="Введите название..."
               value="@Model.Title">
    </div>
    <div class="ms-3">
        <span asp-validation-for="StartDateTime" class="text-danger validator" id="start-date-time-validator-edit"></span>
    </div>
    <div class="modal-body d-flex justify-content-between align-items-center">
        <label class="form-label w-auto h-100 mb-0 me-2 align-baseline">Начало</label>
        <input id="start-date-time-input-edit"
               asp-for="StartDateTime"
               asp-format="{0:yyyy-MM-ddTHH:mm}"
               class="form-control w-100 h-auto m-0 align-baseline"
               value="@Model.StartDateTime.ToString("yyyy-MM-dd HH:mm")">
    </div>
    <div class="ms-3">
        <span asp-validation-for="EndDateTime" class="text-danger validator" id="end-date-time-validator-edit"></span>
    </div>
    <div class="modal-body d-flex justify-content-between align-items-center">
        <label class="form-label w-auto h-100 mb-0 me-2 align-baseline">Конец</label>
        <input id="end-date-time-input-edit"
               asp-for="EndDateTime"
               asp-format="{0:yyyy-MM-ddTHH:mm}"
               class="form-control w-100 h-auto m-0 align-baseline"
               value="@Model.EndDateTime.ToString("yyyy-MM-dd HH:mm")">
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
        <button type="button" id="delete-button" class="btn btn-danger" onclick="deleteWindow()">Удалить</button>
        <button type="submit" id="edit-button" class="btn btn-primary">Подтвердить изменения</button>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
